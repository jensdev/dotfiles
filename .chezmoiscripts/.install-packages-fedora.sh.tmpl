#!/bin/bash

sudo dnf install https://mirrors.rpmfusion.org/free/fedora/rpmfusion-free-release-$(rpm -E %fedora).noarch.rpm https://mirrors.rpmfusion.org/nonfree/fedora/rpmfusion-nonfree-release-$(rpm -E %fedora).noarch.rpm --assumeyes
sudo dnf group upgrade core --assumeyes

sudo dnf4 group install core --assumeyes

sudo dnf -y update  --assumeyes


sudo dnf install fedora-workstation-repositories --assumeyes
sudo dnf config-manager setopt google-chrome.enabled=1

sudo dnf -y install dnf-plugins-core --assumeyes

sudo dnf config-manager addrepo --from-repofile=https://download.docker.com/linux/fedora/docker-ce.repo --overwrite

sudo rpm --import https://packages.microsoft.com/keys/microsoft.asc
echo -e "[code]\nname=Visual Studio Code\nbaseurl=https://packages.microsoft.com/yumrepos/vscode\nenabled=1\nautorefresh=1\ntype=rpm-md\ngpgcheck=1\ngpgkey=https://packages.microsoft.com/keys/microsoft.asc" | sudo tee /etc/yum.repos.d/vscode.repo > /dev/null
dnf check-update


{{ range .fedora.copr -}}

 
    sudo dnf copr enable {{ . | quote }} --assumeyes

{{ end -}}


{{ range .fedora.packages -}}
if ! rpm -q {{ . | quote }} >/dev/null 2>&1; then
    sudo dnf install -y {{ . | quote }}
fi
{{ end -}}

sudo systemctl enable --now libvirtd
sudo usermod -aG libvirt $(whoami)
sudo usermod -aG kvm $(whoami)

flatpak remote-add --if-not-exists flathub https://dl.flathub.org/repo/flathub.flatpakrepo


{{ range .fedora.flathub -}}
if ! flatpak info {{ . | quote }} >/dev/null 2>&1; then
    flatpak install flathub {{ . | quote }} --assumeyes
fi
{{ end -}}

sudo usermod -aG docker $USER
sudo systemctl enable --now docker
